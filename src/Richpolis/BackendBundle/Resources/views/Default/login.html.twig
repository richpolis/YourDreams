{% extends '::admin.html.twig' %}

{% block panel %} 
<div class="container">
      <div id="loginModal" class="modal show" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h1 class="text-center">
                Bienvenido Administrador
              </h1>
              <div class="container text-center">
                <img src="https://s3.amazonaws.com/media.jetstrap.com/8FgMfDrFSZ2bOEdSsdIZ_icon.png">
              </div>
            </div>
            {% if error %}
                <div class="alert alert-danger">{{ error.message | trans }}</div>
            {% endif %}
            {% for flashMessage in app.session.flashbag.get('notice') %}
                <div class="flash-notice alert alert-success">
                  {{ flashMessage }}
                </div>
            {% endfor %}
            {% for flashMessage in app.session.flashbag.get('error') %}
                <div class="flash-notice alert alert-danger">
                  {{ flashMessage }}
                </div>
            {% endfor %}  
            <div class="modal-body">
              <form class="form col-md-12 center-block" action="{{ path('login_check') }}" method="post">
                <div class="form-group">
                  <input class="form-control input-lg" placeholder="Correo electronico"
                  type="text" name="_username" value="{{ last_username }}" required autofocus>
                </div>
                <div class="form-group">
                  <input class="form-control input-lg" placeholder="Password" type="password" name="_password" required>
                </div>
                <div class="form-group">
                  <a href="forms[0].submit();" class="btn btn-primary btn-lg btn-block">
                    Entrar
                  </a>
                  <span class="pull-right"></span>
                  <span></span>
                </div>
              </form>
            </div>
            <div class="modal-footer">
              <div class="container text-center">
              </div>
              <div class="col-md-12">
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

{% endblock %}
