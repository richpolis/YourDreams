{% extends '::admin.html.twig' %}

{% block body -%}
    {% include 'FrontendBundle:Default:navegador.html.twig' with {'tabActive': 'comentarios' } %}
    <div class="tab-content">
        <div id="dreams" class="tab-pane active">
            <div class="container text-left">
                <form action="{{path('comentarios')}}" class="navbar-form navbar-left pull-center" role="search">
                    <div class="form-group">
                        <input class="form-control" placeholder="Buscar comentario" type="text" name="buscar">
                    </div>
                    <button type="submit" class="btn btn-default">
                        Buscar
                    </button>
                </form>
            </div>
            <div class="container text-center">
                <div class="panel panel-default">
                    <!-- Default panel contents -->
                    <div class="panel-heading">
                        Comentarios
                    </div>
                    <!-- Table -->
                    <table class="table">
                        <thead>
                        <tr>
                            <th class="text-center">
                                Comentario
                            </th>
                            <th class="text-center">
                                Calificacion
                            </th>
                            <th class="text-center">
                                Usuario
                            </th>
                            <th class="text-center">
                                Dream
                            </th>
                            <th class="text-center">
                                Accion
                            </th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for comentario in pagination %}
                        <tr>
                            <td>
                                {{ comentario.comentario }}
                            </td>
                            <td>
                                {{ comentario.calificacion }}
                            </td>
                            <td>
                                {{ comentario.usuario }}
                            </td>
                            <td>
                                {{ comentario.dream }}
                            </td>
                            <td>
                                <a href="{{ url('comentarios_show', { 'id' : comentario.id }) }}" class="btn btn-success">Ver</a>
                                <a href="{{ url('comentarios_edit', { 'id' : comentario.id }) }}" class="btn btn-info">Editar</a>
                                <!--a href="javascript: if (confirm('Desea elminar el comentario seleccionado?')) { location.href='{{ url('comentarios_delete', { 'id' : comentario.id }) }}';}" class="btn btn-danger">Eliminar</a-->
                            </td>
                        </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="container">
                    <a href="{{ path('comentarios_new') }}" class="btn btn-primary pull-left">Nuevo comentario</a>
                    <a href="{{ path('comentarios_export') }}" class="btn btn-default pull-right">Exportar</a>
                </div>
                <div class="navigation">
                    {{ knp_pagination_render(pagination) }}
                </div>
            </div>
        </div>
        
    </div>
    <div class="container text-center">
        <h5>
            YourDreams
        </h5>
    </div>
{% endblock %}

