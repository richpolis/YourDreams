{% extends 'BackendBundle::layout.html.twig' %}

{% block body %}
{% include 'BackendBundle:Default:navegador.html.twig' with {'tabActive': 'usuarios' } %}
    <div class="container">
        <form action="{{ path('usuarios_create') }}" method="post" {{ form_enctype(form) }}>
          <br>
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title text-center">
                Crear Usuario
              </h3>
            </div>
            <div class="panel-body">
              {{ form_errors(form) }}  
              <div class="form-group">
                {{ form_widget(form.nombre,{'attr':{'class':'form-control','placeholder':'Nombre'}}) }}
              </div>
              <div class="form-group">
                {{ form_widget(form.apellido,{'attr':{'class':'form-control','placeholder':'Apellido'}}) }}
              </div>
              <div class="form-group">
              </div>
              <div class="form-group">
                {{ form_widget(form.telefono,{'attr':{'class':'form-control','placeholder':'Celular'}}) }}
              </div>
              <div class="form-group">
                {{ form_widget(form.email,{'attr':{'class':'form-control','placeholder':'Email'}}) }}
              </div>
              <div class="form-group">
                {{ form_widget(form.password,{'attr':{'class':'form-control','placeholder':'Password'}}) }}
              </div>
              <div class="form-group">
                {{ form_widget(form.grupo,{'attr':{'class':'form-control','placeholder':'Permisos'}}) }}
              </div>
              <div class="form-group">
              </div>
              <div class="form-group">
              </div>
              <div class="form-group">
              </div>
              <div class="form-group">
              </div>
              <div class="form-group">
                {{ form_widget(form.isActive,{'attr':{'class':'form-control','placeholder':'Es activo'}}) }} Activo
              </div>
              <div class="form-group">
                {{ form_widget(form.observaciones,{'attr':{'class':'form-control','placeholder':'Observaciones'}}) }}
              </div>
            </div>
          </div>
          <div class="container">
            <a href="{{path('usuarios')}}" class="btn btn-success">Regresar</a>
            <input type="submit" class="btn btn-primary btn-sm pull-right" name="botonGuardar" id="botonGuardar" value="Guardar Usuario"/>
            {{ form_rest(form) }}
          </div>
          <div class="container text-center">
          </div>
        </form>
      </div>
{% endblock %}
