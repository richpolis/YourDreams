{% extends 'FrontendBundle::layout.html.twig' %}

{% block content %}
    <section class="container">
        <article class="wrap">
            {% for flashMessage in app.session.flashbag.get('notice') %}
                <div class="flash-notice alert alert-success">
                    {{ flashMessage }}
                </div>
            {% endfor %}
            {% for flashMessage in app.session.flashbag.get('error') %}
                <div class="flash-notice alert alert-danger">
                    {{ flashMessage }}
                </div>
            {% endfor %}
            <div class="formulario"> 
                <form class="form-crear" role="form" action="{{ ((isNew)?path('create_dream'):path('update_dream',{'id':dream.id}) }}" method="post">
                    <h1 class="form-signin-heading">{{titulo}}</h1>
                    <div class="form-group">
             			{{ form_errors(form.titulo)	}}
                		{{ form_widget(form.titulo,{'attr':{'class':'form-control'}})	}}
                    </div>
                    <div class="form-group">
             			{{ form_errors(form.lugar)	}}
                		{{ form_widget(form.lugaar,{'attr':{'class':'form-control'}})	}}
                    </div>
					<div class="form-group">
             			{{ form_errors(form.dream)	}}
                		{{ form_widget(form.dream,{'attr':{'class':'form-control'}})	}}
                    </div>
					<div class="form-group">
             			{{ form_errors(form.file)	}}
                		{{ form_widget(form.file,{'attr':{'class':'form-control'}})	}}
                    </div>
					<div class="form-group form-group-checkbox">
                        <label class="checkbox-inline">
                        {{ form_errors(form.compartir)	}}
                		{{ form_widget(form.compartir,{'attr':{'class':'form-control'}})	}} Compartir tu sue√±o
                        </label>
                    </div>
                    <button class="btn btn-lg btn-center" type="submit">Guardar</button>
                </form>
            </div>       
        </article>        
    </section> <!-- /container -->

{% endblock %}