{% extends 'FrontendBundle::layout.html.twig' %}

{% block content %}
    <section class="container row">
        <article class="wrap">
			<h2>Mis sueños</h2>
            <div class="contenedor-dreams"> 
                <ul class="lista-dreams">
					{% for cont in range(1,10) %}
					<li class="item-dream">
						<a href="{{path('show_dream',{'id': cont })}}">
							<div class="dream">
								<h3 class="titulo-dream">Sueño {{cont}}</h3>
								<span class="fecha-dream">Creado: {{'now'|date('d M Y')}}</span>
							</div>
						</a>
					</li>
					{% endfor %}
				</ul>
            </div>
        </article>        
    </section> <!-- /container -->

{% endblock %}