{% extends 'FrontendBundle::layout.html.twig' %}

{% block content %}
    <div class="container">
        <div class="wrap">
            {% for flashMessage in app.session.flashbag.get('notice') %}
                <div class="flash-notice alert alert-success">
                    {{ flashMessage }}
                </div>
            {% endfor %}
            {% for flashMessage in app.session.flashbag.get('error') %}
                <div class="flash-notice alert alert-danger">
                    {{ flashMessage }}
                </div>
            {% endfor %}
            <div class="formulario"> 
                <form class="form-registro" role="form" action="{{ ((isNew)?path('registro'):path('editar_usuario')) }}" method="post">
                    <h1 class="form-signin-heading">{{titulo}}</h1>
                    <div class="form-group">
             			{{ form_errors(form.email)	}}
                		{{ form_widget(form.email,{'attr':{'class':'form-control'}})	}}
                    </div>
                    <div class="form-group">
             			{{ form_errors(form.password)	}}
                		{{ form_widget(form.password,{'attr':{'class':'form-control'}})	}}
                    </div>
					<div class="form-group">
             			{{ form_errors(form.nombre)	}}
                		{{ form_widget(form.nombre,{'attr':{'class':'form-control'}})	}}
                    </div>
					<div class="form-group">
             			{{ form_errors(form.apellido)	}}
                		{{ form_widget(form.apellido,{'attr':{'class':'form-control'}})	}}
                    </div>
					<div class="form-group">
             			{{ form_errors(form.telefono)	}}
                		{{ form_widget(form.telefono,{'attr':{'class':'form-control'}})	}}
                    </div>
					<div class="form-group">
             			{{ form_errors(form.observaciones)	}}
                		{{ form_widget(form.observaciones,{'attr':{'class':'form-control'}})	}}
                    </div>
                    <button class="btn btn-lg btn-center" type="submit">Guardar</button>
                </form>
            </div>       
        </div>        
    </div> <!-- /container -->

{% endblock %}