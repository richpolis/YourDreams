{% extends 'BackendBundle::layout.html.twig' %}

{% block body -%}
    {% include 'BackendBundle:Default:navegador.html.twig' with {'tabActive': 'usuarios' } %}
    <div class="container">
        <form>
            <br>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title text-center">
                        Mostrar Usuario
                    </h3>
                </div>
                <div class="panel-body">
                    <table class="record_properties table table-striped">
                        <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{entity.id}}</td>
                            </tr>
                            <tr>
                                <th>Nombre</th>
                                <td>{{entity.nombre}}</td>
                            </tr>
                            <tr>
                                <th>Apellido</th>
                                <td>{{entity.apellido}}</td>
                            </tr>
                            <tr>
                                <th>Telefono</th>
                                <td>{{entity.telefono}}</td>
                            </tr>
                            <tr>
                                <th>email</th>
                                <td>{{entity.email}}</td>
                            </tr>
                            <tr>
                                <th>Activo: </th>
                                <td>{{ (entity.isActive?:'Si':'No') }}</td>
                            </tr>
                            <tr>
                                <td>Imagen: </td>
                                <td>
                                    {% if entity.imagen | length > 0 %}
                                        <img src="{{entity.thumbnailWebPath}}" />    
                                    {% else %}    
                                        <img src="{{asset('images/sin-imagen-usuario.png')}}"/>
                                    {% endif %}
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="container text-center">            
                <ul class="record_actions list-inline">
                    <li>
                        <a href="{{ path('usuarios') }}" class="btn btn-primary">
                            Regresar
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('usuarios_edit', { 'id': entity.id }) }}" class="btn btn-success">
                            Editar
                        </a>
                    </li>
                    <li>{{ form(delete_form) }}</li>
                </ul>
            </div>    
            <div class="container text-center">
            </div>
        </form>
    </div>   
{% endblock %}
