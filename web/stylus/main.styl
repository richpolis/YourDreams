@import 'nib'
@import 'normalize' 

box-sizing()
	-webkit-box-sizing arguments
	-moz-box-sizing arguments
	box-sizing arguments
	
opacity(n)
	opacity n
	if support-for-ie
		filter unquote('progid:DXImageTransform.Microsoft.Alpha(Opacity=' + round(n * 100) + ')')

a
	color white
	text-decoration none
	&:hover
		text-decoration underline

body
	font-size 16px
	background url('../images/nubes.jpg')
	background-repeat no-repeat
	background-size cover 
	color white

h1
	font-weight normal

input[type="email"],
input[type="password"], 
input[type="text"]
	margin-bottom .4em
	width 100%
	color rgba(0,0,0,0.8)
	border-top none
	border-left none
	border-right none
	border-bottom 1px solid gray
	background none
	&:focus 
		outline 0px

.container
	margin 0 auto
	color white
	text-shadow 1px 0px 5px rgba(0, 0, 0, 0.70)

.form-group
	background rgba(255,255,255,0.4)
	padding 10px 10px 5px
	box-sizing border-box
	margin-bottom 10px

.form-control 
	height auto
	box-sizing border-box
	padding .6em
	font-size 1em

.text-center
	text-align center

/*
    Login
*/

.form-signin 
	max-width 400px
	padding 3em 1em 1em
	margin 0 auto

.form-signin .checkbox 
	margin-bottom .9em
	font-weight normal

.form-signin-heading 
	text-align center
	font-size 1.5em
	& span
		font-size .7em

.form-signin .form-controlfocus 
	z-index 2

::-webkit-input-placeholder
	color rgba(0,0,0,0.4)


:-moz-placeholder 
	color rgba(0,0,0,0.4)

::-moz-placeholder 
	color rgba(0,0,0,0.4)

:-ms-input-placeholder 
	color rgba(0,0,0,0.4)
